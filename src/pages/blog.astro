---
import Layout from '../layouts/Layout.astro';
import HeroPages from '../components/HeroPages.astro';
import EntradasCard from '../components/EntradasCard.astro';

import { getLatestposts } from '../lib/wp';

const posts = await getLatestposts({ perPage: 50 });
---

<Layout title="Blog">
    <HeroPages title="Blog"/>
    <section class="flex sm:flex-row flex-col justify-center items-start mt-16 w-full h-auto">
        <article class="flex flex-col sm:gap-16 gap-6 items-center sm:justify-start justify-center m-auto w-4/5 h-full">
    
            {posts.map((post) => <EntradasCard {...post}/> )}
            
        </article>
    </section>
</Layout>

