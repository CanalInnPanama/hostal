---
interface Props {
    link_socialmedia: string;
    icon_socialmedia: string;
}

const { link_socialmedia, icon_socialmedia } = Astro.props;
---

<li class="hover:text-blacke">
    <a href={ link_socialmedia } class="rounded-md w-6 h-6 flex text-xs items-center justify-center border border-transparent border-opacity-20 hover:bg-primary hover:scale-125 hover:text-white transition-all duration-500" target="_blank" rel="noreferrer">
        <i class=`text-xl text-prymary ${ icon_socialmedia }`></i>
    </a>
</li>
    