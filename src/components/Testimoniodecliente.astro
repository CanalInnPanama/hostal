---
interface Props {
    title: string;
    punctuation: string;
    description: string;
    imageUrl?: string;
    imageClass: string;
}

const { title, punctuation, description, imageUrl, imageClass } = Astro.props as Props;
---
<div class="flex flex-col items-center justify-start swiper-slide w-full h-full">
    <div class="flex flex-col justify-start items-center w-full h-1/2 mt-5">
        <div>
            <div class=`${ imageClass } flex justify-center items-center sm:w-24 sm:h-24 w-18 h-18 bg-white rounded-full`>
            </div>
        </div>

        <div class="flex flex-col items-center justify-center sm:mt-10 mt-3 text-white sm:w-1/2 w-4/5">
            <h1 class="text-center text-secondtitle">{ title }</h1>
            <h2 class="text-center sm:text-secondtitle text-mparrafo">{ punctuation }</h2>
            <p class="text-center italic sm:text-secondtitle text-mparrafo sm:pb-0 pb-6">{ description }</p>
        </div>

    </div>
</div>

