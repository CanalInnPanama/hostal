<section class="mt-16 w-full">
    <article class="flex flex-col m-auto items-center w-4/5">
        <h1 class="uppercase text-title text-secondary font-bold text-center">
            Consulta tu disponibilidad
        </h1>

        







        <div class="flex items-center justify-center sm:w-4/5 w-full">
            <div class="flex sm:flex-row flex-col w-full sm:h-30 h-full sm:mt-16 mt-8 bg-primary items-center justify-center">
                <form class="flex sm:flex-row flex-col items-center justify-center sm:gap-30 gap-5 my-12 sm:my-0">
                    <div class="flex flex-col items-center justify-center gap-2">
                        <div class="flex justify-center items-center gap-3">
                            <i class="fa-solid fa-person-walking-arrow-right text-white text-2xs"></i>
                            <label for="checkin" class="text-white text-2xs">Check In</label>
                        </div>

                        <input id="checkin" type="date" name="check-in" value="" min="today" class="btn-checkinout text-secondary" required>
                    </div>                   
                    
                    <div class="flex flex-col items-center justify-center gap-2">
                    <div class="flex justify-center items-center gap-3">
                        <i class="fa-solid fa-person-walking-arrow-loop-left text-white text-2xs"></i>
                        <label for="checkout" class="text-white text-2xs">Check Out</label>
                    </div>

                    <input id="checkout" type="date" name="check-out" value="" min="today" class="btn-checkinout text-secondary" required>

                    <div class="flex flex-col items-center justify-center gap-2">
                        <div class="flex justify-center items-center gap-3">
                            <i class="fa-solid fa-bed text-white text-2xs"></i>
                            <label for="pax" class="text-white text-2xsp">Huespedes</label>
                        </div>

                        <select name="pax" id="pax" class="btn-checkinout text-secondary" required>
                            <option value="0" hidden>Personas</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>    
                            <option value="4">4</option>    
                            <option value="5">5</option>    
                        </select>
                    </div>
                    
                    <div class="flex justify-center items-center bg-secondary w-auto h-auto py-2 px-10 rounded-full border-1 border-white cursor-pointer">
                        <button onclick="dialog.showModal()" class="text-white cursor-pointer">
                            Consultar viejo
                        </button>
                    </div>
                </form> 
            </div>

        </div>
























        
        
        
