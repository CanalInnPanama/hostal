---
interface Props {
    icon_contact: string;
    text_contact: string;
    link_contact: string;
}

const { icon_contact, text_contact, link_contact } = Astro.props;
---
<a href={ link_contact } class="hover:ml-1 hover:text-primary transition-all duration-500 cursor-pointer flex w-full" target="_blank" rel="noreferrer">
    <p class="text-white flex items-center gap-4"> 
        <span class="w-11 h-11 rounded-full bg-primary border border-secondary/10 flex justify-center items-center text-white hover:scale-110 transition-all duration-500">
            <i class={ icon_contact }></i>
        </span>

        <span  class="max-w-[168px] text-secondary hover:text-primary">
            { text_contact }
        </span>
    </p>
</a>